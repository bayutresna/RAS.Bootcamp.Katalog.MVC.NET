@model IEnumerable<RAS.Bootcamp.Katalog.MVC.NET.Models.Entities.Keranjang> 
<table class="table" >
    
    <tr>
        <th>
            Nama Penjual
        </th>
        <th>
            Nama Barang
        </th>
        <th>
            Harga
        </th>
        <th>
            Jumlah Barang
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Transaksi" asp-action="DeleteKeranjang">Delete</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBarangNavigation.IdPenjualNavigation.NamaToko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBarangNavigation.Nama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HargaSatuan)
        </td>
        <td>
            <div class="col-lg-2">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="quantity-left-minus btn btn-danger btn-number"  data-type="minus" data-field="">
                            <span class="glyphicon glyphicon-minus"></span>
                        </button>
                    </span>
                        <input type="text" id="quantity" class="form-control input-number" value="@item.Jumlah" min="1" asp-for = "@item.Jumlah">
                    <span class="input-group-btn">
                        <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
        </td>
        <td>
            <img src = @item.IdBarangNavigation.Url width="300" height="150">
        </td>
    </tr>
}
    <th>
        <a class="btn btn-primary" asp-area="" asp-controller="Transaksi" asp-action="CheckOut">Check Out</a>
    </th>
</table>

$(document).ready(function(){

var quantitiy=0;
   $('.quantity-right-plus').click(function(e){
        
        // Stop acting like a button
        e.preventDefault();
        // Get the field name
        var quantity = parseInt($('#quantity').val());
        
        // If is not undefined
            
            $('#quantity').val(quantity + 1);

          
            // Increment
        
    });

     $('.quantity-left-minus').click(function(e){
        // Stop acting like a button
        e.preventDefault();
        // Get the field name
        var quantity = parseInt($('#quantity').val());
        
        // If is not undefined
      
            // Increment
            if(quantity>0){
            $('#quantity').val(quantity - 1);
            }
    });
    
});