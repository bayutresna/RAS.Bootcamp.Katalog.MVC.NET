@model IEnumerable<RAS.Bootcamp.Katalog.MVC.NET.Models.Entities.Keranjang> 
<table class="table" >
    
    <tr>
        <th>

        </th>
        <th>
            Nama Penjual
        </th>
        <th>
            Nama Barang
        </th>
        <th>
            Harga
        </th>
        <th>
            Jumlah Barang
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             <a type="delete" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Transaksi" asp-action="DeleteKeranjang">Delete</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBarangNavigation.IdPenjualNavigation.NamaToko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBarangNavigation.Nama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HargaSatuan)
        </td>
        <td>
            <form asp-action="UpdateKeranjang" asp-controller="Transaksi" method="post">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="hidden" name="Id" value="@item.Id"/>
                                        <label for="Jumlah">
                                            Jumlah
                                        </label>
                                        <input type="number" id="Jumlah" min="1" name="Jumlah" value="@item.Jumlah"/>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        Update Cart
                                    </button>
                                </div>
                            </form>
        </td>
        <td>
            <img src = @item.IdBarangNavigation.Url width="300" height="150">
        </td>
    </tr>
}
    <th>
        <a class="btn btn-danger" asp-area="" asp-controller="Transaksi" asp-action="ClearKeranjang">Clear All</a>
    </th>
    <th>
        <a class="btn btn-primary" asp-area="" asp-controller="Transaksi" asp-action="CheckOut">Check Out</a>
    </th>

</table>
